<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/cart_item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/linearLayout5"
        app:layout_constraintTop_toTopOf="@id/linearLayout5" />

    <TextView
        android:id="@+id/cart_item_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/square_background_5"
        android:fontFamily="@font/spectral_sc"
        android:gravity="center"
        android:text="Pavadinimas"
        android:textColor="@color/text_brown"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@id/cart_item_image" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cart_item_price"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/button_background_3"
        android:fontFamily="@font/spectral_sc"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Apie"
        android:textColor="@color/dark_brown"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@id/cart_item_name" />

    <CheckBox
        android:id="@+id/cart_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/heart_grey"
        app:layout_constraintEnd_toStartOf="@+id/cart_item_image"
        app:layout_constraintStart_toStartOf="@id/cart_item_image"
        app:layout_constraintTop_toTopOf="@id/cart_item_image" />


</androidx.constraintlayout.widget.ConstraintLayout>